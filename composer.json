{
	"name": "alfredoramos/hcaptcha",
	"type": "phpbb-extension",
	"description": "hCaptcha extension for phpBB",
	"homepage": "https://github.com/AlfredoRamos/phpbb-ext-hcaptcha",
	"version": "1.1.0",
	"time": "2025-05-17",
	"keywords": [
		"phpbb",
		"extension",
		"captcha",
		"hcatpcha",
		"anti-spam"
	],
	"license": "GPL-2.0-only",
	"authors": [
		{
			"name": "Alfredo Ramos",
			"email": "alfredo.ramos@proton.me",
			"homepage": "https://alfredoramos.mx",
			"role": "Lead Developer"
		}
	],
	"require": {
		"php": "^8.1.0",
		"composer/installers": "^1.6.0 || ^2.2.0"
	},
	"require-dev": {
		"phing/phing": "^2.16.0",
		"pear/archive_tar": "^1.4.0"
	},
	"extra": {
		"display-name": "hCaptcha",
		"soft-require": {
			"phpbb/phpbb": "~3.3.0"
		},
		"version-check": {
			"host": "alfredoramos.mx",
			"directory": "/phpbb-extensions/versions",
			"filename": "hcaptcha.json",
			"ssl": true
		}
	},
	"config": {
		"allow-plugins": {
			"composer/installers": true
		}
	}
}